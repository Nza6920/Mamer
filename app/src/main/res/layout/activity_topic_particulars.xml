<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopicParticularsActivity"
    android:orientation="vertical"
    android:background="#afefeded">

    <include layout="@layout/title"/>

        <RelativeLayout
            android:id="@+id/author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="15dp"
            android:layout_marginTop="8dp"
            android:paddingLeft="15dp">

            <android.support.v7.widget.CardView
                android:id="@+id/topic_cardview"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="10dp"
                android:layout_centerVertical="true"
                app:cardCornerRadius="16dp">

                <ImageView
                    android:id="@+id/topic_particulars_author_pic"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </android.support.v7.widget.CardView>
            <TextView
                android:id="@+id/topic_particulars_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="13sp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/topic_cardview"/>

        </RelativeLayout>
        <ScrollView
            android:id="@+id/topic_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/author"
            android:background="@drawable/divid_line"
            android:paddingBottom="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/topic_particulars_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="#000"
                    android:textSize="16sp"/>

                <com.chinalwb.are.AREditText
                    android:id="@+id/topic_particulars_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top|left"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:id="@+id/topic_particulars_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:layout_marginTop="8dp"
                    android:gravity="right"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/divid_line"
                    android:paddingTop="8dp">
                    <LinearLayout
                        android:id="@+id/reply_to_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="评论"
                            android:textSize="13sp" />
                        <TextView
                            android:id="@+id/reply_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:textSize="13sp"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/like_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_alignParentRight="true">
                        <TextView
                            android:id="@+id/like_touch_event"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:background="@mipmap/ic_popup_topic_manage_like_"/>
                        <TextView
                            android:id="@+id/like_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" "
                            android:textSize="13sp"/>
                    </LinearLayout>

                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/reply_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:clickable="true">
                    <LinearLayout
                        android:id="@+id/reply_comment_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:visibility="gone">
                        <ImageView
                            android:id="@+id/reply_user_avatar"
                            android:layout_width="48dp"
                            android:layout_height="48dp"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="8dp">
                            <TextView
                                android:id="@+id/reply_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:lines="1"
                                android:enabled="true"
                                android:textColor="#444"/>
                            <TextView
                                android:id="@+id/reply_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:textColor="#000"
                                android:layout_marginTop="8dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/reply_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:layout_gravity="right"
                        android:visibility="gone"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal"
                        android:background="@drawable/register_phone_num_tab">
                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@mipmap/ic_reply_comment"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="添加评论..."
                            android:textSize="13sp"
                            android:gravity="center_vertical"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>



</LinearLayout>