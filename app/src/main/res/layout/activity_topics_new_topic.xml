<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title" />
    <LinearLayout
        android:id="@+id/new_topic_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/title_bar"
        android:orientation="vertical">
        <EditText
            android:id="@+id/new_topic_title_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请填写标题"
            android:textSize="17sp"
            android:textColor="#000"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/new_topic_classify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/new_topic_title">
        <TextView
            android:id="@+id/new_topic_share"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/new_topic_tech"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="center"
            android:background="@drawable/register_phone_num"/>
        <TextView
            android:id="@+id/new_topic_question_answering"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="center"
            android:background="@drawable/register_phone_num"/>
        <TextView
            android:id="@+id/new_topic_notice"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="center"
            android:background="@drawable/register_phone_num"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/new_topic_classify_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/new_topic_title"
        android:visibility="gone">
        <TextView
            android:id="@+id/new_topic_selected"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/new_topic_selected_info"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="center"
            android:background="@drawable/register_phone_num"/>
       </LinearLayout>

    <com.example.my.mamer.view.RichTextEditor
        android:id="@+id/new_topic_rich_text_editor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:paddingTop="5dp"
        android:layout_below="@+id/new_topic_title"
        android:background="@drawable/register_phone_num_tab"/>
    <LinearLayout
        android:id="@+id/new_topic_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:background="#71b6b5b5">
        <TextView
            android:id="@+id/new_topic_pic"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="添加图片"
            android:textSize="15sp"
            android:textColor="#000"
            android:gravity="center" />
        <TextView
            android:id="@+id/new_topic_post_pic"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="上传图片"
            android:textSize="15sp"
            android:textColor="#000"
            android:gravity="center"
            android:background="@drawable/register_phone_num"/>
    </LinearLayout>



</RelativeLayout>