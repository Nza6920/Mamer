<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">
    <include layout="@layout/title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textColor="#000"
            android:textSize="24sp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="8dp">

            <EditText
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/ic_register_username"
                android:enabled="false" />

            <EditText
                android:id="@+id/register_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:maxLength="12"
                android:textSize="16sp"
                android:paddingLeft="8dp"/>

        </LinearLayout>
        <TextView
            android:id="@+id/register_input_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入2-12个字符，可使用汉字、字母、数字等"
            android:textColor="#717171"
            android:textSize="8sp"
            android:layout_gravity="end"
            android:enabled="false"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <EditText
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/ic_register_password"
                android:clickable="false"
                android:enabled="false" />
            <EditText
                android:id="@+id/register_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"
                android:paddingLeft="8dp"
                android:maxLength="16"/>
        </LinearLayout>
        <TextView
            android:id="@+id/register_input_pas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入至少6个字符，可使用数字、字母、符号等"
            android:textColor="#717171"
            android:textSize="8sp"
            android:layout_gravity="end"
            android:enabled="false"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <EditText
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/ic_register_password_again"
                android:clickable="false"
                android:enabled="false"
                android:inputType="textPassword"/>
            <EditText
                android:id="@+id/register_password_again"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"
                android:paddingLeft="8dp"
                android:maxLength="16"
                android:inputType="textPassword"/>
        </LinearLayout>
        <TextView
            android:id="@+id/register_input_pas_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="两次密码不同"
            android:textColor="#717171"
            android:textSize="8sp"
            android:layout_gravity="end"
            android:enabled="false"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <EditText
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/ic_register_emil"
                android:clickable="false"
                android:enabled="false" />

            <EditText

                android:id="@+id/register_emil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"
                android:paddingLeft="8dp"/>

        </LinearLayout>
        <TextView
            android:id="@+id/register_input_emil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入合法邮箱"
            android:textColor="#717171"
            android:textSize="10sp"
            android:layout_gravity="end"
            android:enabled="false"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <EditText
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/ic_register_verification"
                android:clickable="false"
                android:enabled="false" />

            <EditText
                android:id="@+id/register_verification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"
                android:paddingLeft="8dp"/>


        </LinearLayout>

        <Button
            android:id="@+id/register_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="注册"
            android:textColor="#fff"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            android:background="@drawable/register_phone_num_btn"
            android:enabled="true"/>
    </LinearLayout>

</LinearLayout>


