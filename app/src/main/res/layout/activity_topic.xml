<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:are="http://schemas.android.com/apk/res-auto"
    tools:context=".TopicActivity"
    android:id="@+id/topic_">
    <include layout="@layout/title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title_bar"
        android:layout_above="@+id/topic_bottombar"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <EditText
                android:id="@+id/topic_title_"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="请输入标题"
                android:textSize="25sp"
                android:background="@drawable/bottom_line"
                android:focusableInTouchMode="true"/>
            <RelativeLayout
                android:id="@+id/topic_flag_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/topic_flag_"
                android:layout_margin="5dp"
                android:padding="2dp">
                <TextView
                    android:id="@+id/topic_flag_add"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
                    android:background="@mipmap/ic_topic_flag_"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="标签"
                    android:textSize="16sp"
                    android:textColor="#12A3E9"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@+id/topic_flag_add"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_topic_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/topic_flag_"
                android:layout_margin="5dp"
                android:padding="2dp"
                android:visibility="gone">
                <TextView
                    android:id="@+id/topic_flag_t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_centerInParent="true"
                    android:textColor="#12A3E9"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:id="@+id/topic_flag_t_close"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/ic_title_close"
                    android:layout_toRightOf="@+id/topic_flag_t"/>
            </RelativeLayout>

            <com.chinalwb.are.AREditText
                android:id="@+id/topic_arEditText_"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top|left"
                android:hint="请输入正文"
                android:textSize="16sp"
                android:background="@drawable/divid_line"/>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/topic_bottombar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:visibility="visible">
        <TextView
            android:id="@+id/topic_keybaord_down"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:background="@mipmap/ic_keyoard_down"/>
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">
            <com.chinalwb.are.styles.toolbar.ARE_ToolbarDefault
                android:id="@+id/topic_areToolbar_"
                android:layout_width="wrap_content"
                android:layout_height="48dp" />
        </ScrollView>

    </RelativeLayout>


</RelativeLayout>