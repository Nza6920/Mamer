<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp">
    <LinearLayout
        android:id="@+id/topic_part_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff">
        <TextView
            android:id="@+id/topic_content_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000"
            android:lines="1"
            android:enabled="true"
            android:layout_marginLeft="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <android.support.v7.widget.CardView
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:cardCornerRadius="16dp">

                <ImageView
                    android:id="@+id/topic_content_author_pic"
                    android:layout_width="32dp"
                    android:layout_height="32dp"/>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/topic_content_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="作者 "
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginLeft="8dp"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/topic_content_author_name_pic"
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/topic_content_time_pic"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/ic_topic_time" />
            <TextView
                android:id="@+id/topic_content_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textSize="13sp"
                android:textColor="#000"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/topic_content_time_pic"/>

            <TextView
                android:id="@+id/topic_discuss_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="78787 "
                android:textSize="13sp"
                android:textColor="#000"
                android:layout_toLeftOf="@+id/topic_discuss_name"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/topic_discuss_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="讨论 "
                android:textSize="13sp"
                android:textColor="#000"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>