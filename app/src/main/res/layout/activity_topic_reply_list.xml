<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopicReplyListActivity">
    <include layout="@layout/title"/>
    <TextView
        android:id="@+id/topic_reply_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_bar"
        android:paddingLeft="15dp"
        android:background="#14000000"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topic_reply_count"
        android:layout_above="@+id/reply_bottombar">
        <ListView
            android:id="@+id/topic_reply_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"/>
    </FrameLayout>
    <LinearLayout
        android:id="@+id/reply_bottombar"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@drawable/register_phone_num_tab"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="@mipmap/ic_reply_comment"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="我要评论"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="发布"
            android:textSize="18sp"
            android:textColor="#12A3E9"
            android:gravity="center"
            android:layout_marginRight="5dp"/>


    </LinearLayout>

</RelativeLayout>