<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CenterActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff">
        <!--标题-->
        <include layout="@layout/title"/>
        <!--Fragment-->
        <RelativeLayout
            android:id="@+id/fragment_body"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/nav_bottom_bar"
        android:layout_alignParentBottom="true"
        android:background="#f2f2f2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <RelativeLayout
            android:id="@+id/nav_bottom_bar_homepage"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/home_page_prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:gravity="center"
                android:text="首页"
                android:textColor="#666666"
                android:textSize="14sp"/>
            <ImageView
                android:id="@+id/home_page_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:src="@mipmap/ic_home_page"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/nav_bottom_bar_issue"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/issue_prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:gravity="center"
                android:textColor="#666666"
                android:textSize="14sp"/>
            <ImageView
                android:id="@+id/issue_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:src="@mipmap/ic_home_page"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/nav_bottom_bar_personal"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/personal_prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="3dp"
                android:gravity="center"
                android:text="我的"
                android:textColor="#666666"
                android:textSize="14sp"/>
            <ImageView
                android:id="@+id/personal_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:src="@mipmap/ic_personal"/>
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>