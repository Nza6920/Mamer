<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UserEditorInformationActivity">
    <include layout="@layout/title"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/title_bar"
        android:background="@drawable/divid_line">

        <RelativeLayout
            android:id="@+id/avatar_layout"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp">
            <android.support.v7.widget.CardView
                android:id="@+id/cardview_avatar"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center_vertical"
                app:cardCornerRadius="80dp">
                <ImageView
                    android:id="@+id/user_information_avatar"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_alignParentLeft="true"/>
            </android.support.v7.widget.CardView>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_toRightOf="@+id/cardview_avatar"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="24dp"
                android:background="@drawable/user_home_page_editor">
                <TextView
                    android:id="@+id/user_information_editor_pic"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="4dp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/ic_image_error"/>
                <TextView
                    android:id="@+id/user_information_editor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="修改头像"
                    android:textSize="16sp"
                    android:textColor="#727272"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/user_information_editor_pic"
                    android:enabled="true"/>
            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="基础资料"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:layout_below="@+id/avatar_layout"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_below="@+id/tv_info">
            <LinearLayout
                android:id="@+id/name_layout"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/ic_user_information_name"
                    android:clickable="false"
                    android:enabled="false"/>
                <EditText
                    android:id="@+id/user_information_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textSize="16sp"
                    android:layout_marginLeft="32dp"
                    android:maxLength="16"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/email_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:layout_below="@+id/name_layout">

                <TextView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center_vertical"
                            android:background="@mipmap/ic_user_information_email"
                            />
                <TextView
                            android:id="@+id/user_information_email"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:textSize="16sp"
                            android:textColor="#000"
                            android:layout_marginLeft="32dp"/>
            </LinearLayout>
            <TextView
                        android:id="@+id/user_information_email_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:textColor="#5687f1"
                        android:textSize="8sp"
                        android:layout_below="@+id/email_layout"/>
            <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_below="@+id/user_information_email_info"
                        android:background="@drawable/register_phone_num_tab">
                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="start"
                    android:background="@mipmap/ic_user_information_introduction"
                    android:clickable="false"
                    android:enabled="false"/>
                <EditText
                    android:id="@+id/user_information_introduction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textSize="16sp"
                    android:hint="什么都没留下┗|｀O′|┛ 嗷~~"
                    android:paddingLeft="10dp"
                    android:background="@drawable/user_information_introduction"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>