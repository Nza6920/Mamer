<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/topic_part_content"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#fff">
        <ImageView
            android:id="@+id/topic_content_author_pic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"/>
        <LinearLayout
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/topic_content_title"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="10dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp">
                <TextView
                    android:id="@+id/topic_content_author_name_pic"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/ic_user_information_name"/>
                <TextView
                    android:id="@+id/topic_content_author_name"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="作者 "
                    android:textColor="#000"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/topic_content_author_name_pic"/>
                <TextView
                    android:id="@+id/topic_content_time_pic"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:background="@mipmap/ic_topic_time"
                    android:layout_toRightOf="@+id/topic_content_author_name" />
                <TextView
                    android:id="@+id/topic_content_time"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="发布时间 "
                    android:textColor="#000"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/topic_content_time_pic"/>

                <TextView
                    android:id="@+id/topic_discuss_count"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="讨论人数 "
                    android:textColor="#000"
                    android:gravity="center"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>