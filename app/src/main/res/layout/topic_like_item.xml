<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:id="@+id/like_list_layout"
    android:background="@drawable/divid_line"
    android:layout_margin="8dp">

    <ImageView
        android:id="@+id/like_list_avatar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginRight="8dp"/>

    <TextView
        android:id="@+id/like_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textSize="18sp"
        android:lines="1"
        android:ellipsize="end"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/like_list_avatar"
        />
        <TextView
            android:id="@+id/like_list_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/like_list_name"
            android:layout_toRightOf="@+id/like_list_avatar"
            android:text="标签"
            android:textColor="@color/colorDel"
            android:lines="2"
            android:ellipsize="end"
            android:layout_marginTop="8dp" />
</RelativeLayout>