<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterPhoneNumActivity">

    <include layout="@layout/title"/>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="50dp"
         android:layout_marginRight="50dp"
         android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mamer"
                android:textColor="#000"
                android:textSize="25sp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="mamer遇见未知"
                android:textSize="11sp"
                android:textColor="#717171"
                android:gravity="center"/>
        </LinearLayout>


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="60dp"
             android:layout_marginTop="20dp"
             android:layout_marginRight="2dp"
             android:layout_marginLeft="2dp"
             android:background="@drawable/register_phone_num_tab"
             >

             <EditText
                 android:layout_width="wrap_content"
                 android:layout_height="50dp"
                 android:layout_gravity="center_vertical"
                 android:background="@mipmap/ic_register_phone"
                 android:clickable="false"
                 android:enabled="false" />

             <EditText

                 android:id="@+id/register_phone_num"
                 android:layout_width="match_parent"
                 android:layout_height="40dp"
                 android:layout_gravity="center_vertical"
                 android:paddingTop="5dp"
                 android:paddingBottom="5dp"
                 android:background="@drawable/register_phone_num"
                 android:inputType="number"
                 android:maxLength="11"
                 android:textSize="16sp"
                 android:paddingLeft="10dp"/>

         </LinearLayout>
         <Button
             android:id="@+id/register_phone_num_btn"
             android:layout_width="match_parent"
             android:layout_height="45dp"
             android:text="注册"
             android:textColor="#fff"
             android:textSize="16sp"
             android:layout_marginTop="20dp"
             android:background="@drawable/register_phone_num_btn"
             android:enabled="false"/>
         <TextView
             android:id="@+id/register_had"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="已注册？"
             android:textColor="#3496f2"
             android:textSize="13sp"
             android:enabled="true"
             android:layout_gravity="end"
             android:layout_marginTop="5dp"/>
     </LinearLayout>



</LinearLayout>